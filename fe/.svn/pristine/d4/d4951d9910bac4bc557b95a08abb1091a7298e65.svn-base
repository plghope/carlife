@blue: #247ACF;
.nav{
    position: relative;
    z-index: 1;
}
.nav-menu{
    margin-top: 23px;
        
    list-style: none;

    li{
        float: left;
        margin-right: 2px;
        height: 36px;

    }

    a.menu-item{
        display: block;
        width: 120px;
        height: 36px;
        font-weight: bold;
        line-height: 36px;
        text-align: center;
        background: rgb(246,246,246);
        color: rgb(160,160,160);
        font-size: 14px;
        border: none;
        box-shadow: 0px 1px 1px rgba(6,0,1,.15);
    }

    a.menu-item:hover{
        text-decoration: none;
    }

    li.selected{
        background-color: #fff;
    }

    li.selected a.menu-item{
        color: rgb(74, 110, 186);
        background-color: #fff;
    }

}
