#ad-form .payment-list .balance-info{
    position: relative;
    display: inline-block;
    color: #666;
    margin-left: -38px;
    vertical-align: middle;
    font-size: 12px;
    span{
        color: #444;
        font-size: 13px;
        margin-left: 5px;
    }
    a{
        height: 32px;
        line-height: 32px;
        text-align: center;
        width: 80px;
        position: absolute;
        background: #f2f2f2;
        color: #4AA1FE;
        font-size: 14px;
        top: -7px;
        right: -96px;
        
    }
}

.pay-notify{
    position: fixed;
    width: 480px;
    top: 50%;
    left: 50%;
    margin-left: -240px;
    height: 170px;
    margin-top: -85px;
    border: 6px solid rgb(204,204,204);
    z-index: 21;
    background: #fff;
    h3{
        font-size: 16px;
        border-bottom: 1px solid #ccc;
        background: #38f;
        color: #fefefe;
        padding: 5px 10px;
    }
    p{
        text-align: center;
        margin-top: 24px;
        color: #777;
    }
    .pay-tips{
        width: 300px;
        margin: 15px auto;
        a{
            width: 120px;
            display: inline-block;
            border: 1px solid #aaa;
            background: #eee;
            text-align: center;
            height: 30px;
            padding: 0px;
            line-height: 30px;
            margin-right: 24px;
        }
      a:hover{
            background: #fff;
            text-decoration: none;
       }
    }
    .pay-success{
        color: #F25C60;
        font-size: 14px;

    }

}
.pay-mask{
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 20;
    background: rgba(244,244,244,.4);
}

.help-block{
    color: #ea8484;
}
