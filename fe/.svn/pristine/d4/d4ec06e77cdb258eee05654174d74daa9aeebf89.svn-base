@import "../lib/admin_base.less";

@border-color: #247ACF;

.ad-tab{
    list-style: none;
    margin-left: 8px;
    li{
        height: 44px;
        line-height: 44px;
        float: left;
        padding: 0 18px;
        font-size: 14px;
        border-bottom: 2px solid transparent;
        a{
            text-decoration: none;
            color: #444;
        }
    }

    li.selected{
        border-bottom: 3px solid @border-color;

        
    }




}

.form-container{
    background-color: #fff;
    border: 1px solid #efefef;
    box-shadow: 0px 1px 1px rgba(254,254,254,.8);
}

#ad-form{
    width: 100%;
    -moz-user-select: none;
    -webkit-user-select: none;
    -ms-user-select: none;
    .control-group {
      margin-bottom: 20px;
      *zoom: 1;
    }

    .control-group:before,
    .control-group:after {
      display: table;
      line-height: 0;
      content: "";
    }

    .control-group:after {
      clear: both;
    }

    .control-label {
      float: left;
      width: 110px;
      padding-top: 10px;
      text-align: right;
    }

    .controls {
      position: relative;
      *display: inline-block;
      *padding-left: 20px;
      margin-left: 130px;
      *margin-left: 0;
    }
    
    label{
        font-size: 12px;
        color: #666;
    }

    input[type="text"], select{
        display: inline-block;
        height: 24px;
        width: 405px;
        padding: 4px 20px;
        font-size: 14px;
        line-height: 32px;
        vertical-align: middle;
        -webkit-border-radius: 2px;
        -moz-border-radius: 2px;
        border-radius: 2px;
        color: #333;
        border: 1px solid #ddd;
    }

    select{
        visibility: hidden;
    }

    .info-block{
        position: relative;
        display: inline-block;
    }

    .traffic-block{
        position: relative;
        border-left: 1px solid #ddd;
        height: 1160px;
    }

    .pay-block{
        position: relative;
        padding-bottom: 40px;
        height: 400px;
        .block-body{
            padding: 15px 0;

        }
    }

    .block-header{
        position: absolute;
        top: -30px;
        left: -15px;
        span{
            display: inline-block;
            height: 30px;
            line-height: 30px;
            width: 30px;
            text-align: center;
            border: 1px solid #ddd;
            border-radius: 50% 50%;
            font-size: 14px;
            color: #333;
            background: #fff;

        }
        p{
            margin-left: 13px;
            display: inline-block;
            font-size: 14px;
            color: #333;
        }
    }

    .block-body{
        padding: 30px 0 0 0;
    }

    #traffic_table{
        thead{
            tr{
                background-color: #F2F2F2;
            }
        }

        th{
            height: 32px;
            line-height: 32px;
        }

        td{
            height: 28px;
            line-height: 28px;
        }

        th, td{
            text-align: center;
            border: 1px solid #ddd;
            width: 147px;
        }
        input{
            width: 110px;
            height: 28px;
            line-height: 28px;
            border: none;
            padding: 0 5px;
            text-align: center;
            font-size: 12px;
            cursor: pointer;
        }

        input:focus,
        input:hover{
            border: none;
            outline: none;
        }


    }

    #ad-form-submit{
        display: inline-block;
        vertical-align: middle;
        margin: 15px auto;
        width: 110px;
        line-height: 40px;
        text-align: center;
        button{
            background: none;
            height: 40px;
            width: 110px;
            line-height: 40px;
            color: #fff;
            text-align: center;
            font-size: 18px;
            background: #FF9900;
        }
        



    }
#ad-form-submit button:hover{
    background: lighten(#FF9900, 5%);
}

    .help-block{
        display: inline-block;
        margin-left: 20px;
        font-size: 14px;
    }

    .error{
        color: #FF0717;
    }

}

.select-box{
    position: absolute;
    top: 0px;
    z-index: 2;
    left: 0;
    display: none;
    height: 24px;
    width: 433px;
    padding: 4px 6px;
    font-size: 14px;
    line-height: 32px;
    vertical-align: middle;
    -webkit-border-radius: 2px;
    -moz-border-radius: 2px;
    border-radius: 2px;
    color: #333;
    border: 1px solid #ddd;
    cursor: pointer;
    .current-select{
        margin-left: 14px;
        color: #333;
        line-height: 28px;
        display: block;
    }
    i{
        position: absolute;
        right: 23px;
        top: 50%;
        margin-top: -9px;
        font-size: 18px;
        color: #666;
    }
    ul{
        display: none;
        position: absolute;
        z-index: 2;
        top: 32px;
        left: -1px;
        background: #fff;
        border: 1px solid #ddd;
        border-top: none;
        max-height: 192px;
        overflow-y: auto;
        overflow-x: hidden;
        li{
            height: 24px;
            width: 405px;
            padding: 4px 20px;
            font-size: 14px;
            line-height: 32px;
            vertical-align: middle;
            color: #333;
        }

        li.select-disabled{
            color: #999;
        }

    }


}

.select-focus{
    z-index: 6 !important;
}

#ad-form .payment-list {
  list-style: none;
}

#ad-form .payment-list h3 {
  display: block;
  color: #666;
  height: 28px;
  line-height: 28px;
}
#ad-form .payment-list li {
  overflow: hidden;
  zoom: 1;
}
#ad-form .payment-list .payment-account .payment-item label.label-img {
  height: auto;
  border: none;
  color: #333;
  font-size: 14px;
}
#ad-form .payment-list .payment-item {
  float: left;
  width: 161px;
  margin-top: 12px;
  margin-right: 0px;
  margin-bottom: 12px;
  display: inline;
}
#ad-form .payment-list .payment-item label.label-img {
  display: inline-block;
  vertical-align: middle;
  border: 1px solid #ddd;
  width: 110px;
  height: 27px;
  margin-left: 8px;
  margin-bottom: 0;
  overflow: hidden;
}

#ad-form .payment-list .payment-item input {
