@border-color: #247ACF;
@blue: rgb(74,110,186);
#acl-form{
    width: 100%;
    -moz-user-select: none;
    -webkit-user-select: none;
    -ms-user-select: none;
    .control-group {
      margin-bottom: 20px;
      *zoom: 1;
    }

    .control-group:before,
    .control-group:after {
      display: table;
      line-height: 0;
      content: "";
    }

    .control-group:after {
      clear: both;
    }

    .control-label {
      float: left;
      width: 110px;
      padding-top: 7px;
      text-align: right;
    }

    .controls {
      position: relative;
      *display: inline-block;
      *padding-left: 20px;
      margin-left: 130px;
      *margin-left: 0;
    }
    
    label{
        font-size: 12px;
        color: #666;
    }

    .form-input{
        display: inline-block;
        height: 24px;
        width: 405px;
        padding: 4px 20px;
        font-size: 14px;
        line-height: 32px;
        vertical-align: middle;
        -webkit-border-radius: 2px;
        -moz-border-radius: 2px;
        border-radius: 2px;
        color: #333;
        border: 1px solid #ddd;
    }

    .form-select{
        float: left;
    }

    select.form-input{
        width: 168px;
    }


    .info-block{
        position: relative;
        height: 120px;
        border-left: 1px solid #ddd;
    }


    #user-block{
        border: none;
        height: auto;
    }
    .block-header{
        position: absolute;
        top: -30px;
        left: -15px;
        span{
            display: inline-block;
            height: 30px;
            line-height: 30px;
            width: 30px;
            text-align: center;
            border: 1px solid #ddd;
            border-radius: 50% 50%;
            font-size: 14px;
            color: #333;
            background: #fff;

        }
        p{
            margin-left: 13px;
            display: inline-block;
            font-size: 14px;
            color: #333;
        }
    }

    .block-body{
        padding: 30px 0;
    }

    .help-block{
        display: inline-block;
        margin-left: 20px;
        font-size: 14px;
        color: #ea8484;
    }

    .error{
        color: #FF0717;
    }


    .select2{
        margin-right: 5px;
        margin-bottom: 5px;
    }

    #acl_name{
        width: 384px;
        font-size: 12px;
        padding: 2px 9px;
        line-height: 30px;
    }

    
    .controls:hover{
        .remove-item{
            display: inline-block;
        }
    }

    .remove-item{
        background: none;
        display: none;
        i{
            color: #999;
            font-size: 14px;
            margin-left: 4px;
            cursor: pointer;
        }
        i:hover{
            color: #777;
        }
    }
}

#b-create-acl{
    display: inline-block;
    width: 82px;
    height: 33px;
    margin-left: 233px;
    line-height: 33px;
    text-align: center;
    font-size: 12px;
    cursor: pointer;
    border: none;
    border-radius: 2px;
    -webkit-border-radius: 2px;
    -o-border-radius: 2px;
    -moz-border-radius: 2px;
    background-color: @blue;
    color: #fff;
}


#b-create-acl:hover{
    text-decoration: none;
    background: darken(@blue, 5%);
    color: darken(#fff, 5%);
}

#b-create-acl:disabled{
    color: #a0a0a0;
    background: #f6f6f6;
}

#add-group{
    a{
        display: block;
        height: 32px;
        line-height: 32px;
        text-align: center;
        width: 80px;
        background: #f2f2f2;
        color: #4AA1FE;
        font-size: 14px;
    }
    a:hover{
        text-decoration: none;
        background: darken(#f2f2f2,5%);
        color: darken(#4AA1FE, 5%);
    }


}
