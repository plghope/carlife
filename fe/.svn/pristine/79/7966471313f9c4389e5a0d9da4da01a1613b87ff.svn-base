@import "../lib/admin_base.less";

.user-list{
    padding-top: 20px;
}

.drop-item{
    position: absolute;
    z-index: 5;
    left: 0;
    top: 0;
}


.dropzone {
    width: 280px;
    height: 500px;
    float: left;
    background-color: #e9e9e9;
    border: dashed 1px transparent;
    box-shadow: 0 1px 1px rgba(6,0,1,.15);
    border-radius: 4px;
    margin: 10px 10px 30px;
    padding: 10px;
    transition: background-color 0.3s;
    position: relative;
    -moz-user-select: none;
    -webkit-user-select: none;
    -ms-user-select: none;
    .header{
        position: absolute;
        height: 40px;
        width: 100%;
        left: 0;
        top: -40px;
        color: #fff;
        background: #4a6eba;
        font-size: 16px;
        line-height: 40px;
        text-align: center;
    }
}


.drop-active {
  border-color: #aaa;
}

.drop-target {
  background-color: #29e;
  border-color: #fff;
  border-style: solid;
}

.drag-drop {
  width: 80px;
  padding: 7px 5px;

  color: #fff;
  background-color: #29e;
  border: solid 1px #fff;
  overflow: hidden;
  text-overflow: ellipsis;

  -webkit-transform: translate(0px, 0px);
          transform: translate(0px, 0px);

  transition: background-color 0.3s;
  text-align: center;
}

.drag-drop.can-drop {
  color: #000;
  background-color: #4e4;
}

#outer{
    width: 100%;
    background: #f0f0f0;
    border: none;
    box-shadow: none;
    
}

#other-list{
    position: absolute;
    left: 220px
}
