{%extends file="../layout_admin.tpl"%}
{%block name="title"%}
BDE-用户登陆
{%/block%}
{%block name="static-resource"%}
    {%require name="bde:static/css/user/login.less"%}
{%/block%}

{%block name="header-nav"%}
    {%widget name="bde:widget/headerNav/headerNav.tpl"
            mode='login'
    %}
{%/block%}
{%block name="content"%}
    {%config_load file="bde/deploy.conf"%}
    <div id="bde" class="uc-common-login"></div>
    
    <script type="text/javascript" src="http://cas.baidu.com/staticv2/dep/common-login/api.js?cdnversion={%$smarty.now|date_format:'%Y%m%d%H%M'%}
"/></script>

    {%script%}

    var origin = location.protocol.replace(':', '') + '://' + location.host;
    var configs = {
        container:'bde',
        appid: '347',
        AUTO: 0,
        fromu: '{%#deploy#%}' + 'bde/biu/datalist',
        product: 'bde',
        staticPage: '{%#deploy#%}' +  'static/bde/login/v3Jump.html',
        isLayer: 0,
        registerUcLink: 'https://u.baidu.com/ucweb/?module=Reguser&controller=reg&action=index&appid=347'
    };
    ucCommonLogin.init(configs);
    {%/script%}
{%/block%}

