@import "../lib/admin_base.less";



.account-wrapper{
    width: 793px;
    margin: 71px auto 30px auto;
    #account-page-header{
        margin-bottom: 10px;
        border: 0;
        border-bottom: 1px solid #e5e5e5;
        font-size: 21px;
        line-height: 40px;
        color: #333;
        h3{
            display: inline-block;
            text-indent: 1em;
        }
        span{
            float: right;
            color: #777;
            font-size: 16px;
        }


    }

    #program-table, #account-filter{
        margin-left: 21px;
    }

    #account-filter{
        margin-bottom: 3px;
        .select-target{
            margin-right: 8px;   
        }
    }

    #program-table{
        border-right: 1px solid #cbcbcb;
        border-top: 1px solid #cbcbcb;
        border-bottom: 1px solid #cbcbcb;
        border-radius: 0 3px 3px 0;
        -webkit-border-radius: 0 3px 3px 0;
        -moz-border-radius: 0 3px 3px 0;
        -o-border-radius: 0 3px 3px 0;

        thead{
            font-size: 12px;
            color: #878787;
            text-shadow: 0 1px 0 #fff;
            th{
                text-align: left;
                border-left: 1px solid #cbcbcb;
                font-size: 12px;
                height: 32px;
                line-height: 32px;
                padding:0 16px;
                border-left: 1px dotted #b4babf;
                border-top: 1px solid #b4babf;
                white-space: nowrap;
            }
            th:first-child{
                border-radius: 3px 0 0 0;
                -webkit-border-radius: 3px 0 0 0;
                -moz-border-radius: 3px 0 0 0;
                -o-border-radius: 3px 0 0 0;
            }

            th:last-child{
                border-right: 1px solid #cbcbcb;
            }
        }
        tbody{
            background-color: #ffffff;
            font-size: 12px;
            color: #424242;
            .even{
                background-color: #ffffff;
            }
            .odd{
                background-color: #eef5fb;
            }
            td{
                text-align: center;
                padding: 6px;
                max-width: 15em;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                padding-left: 10px;
                vertical-align: middle;
                line-height: 19px;
                height: 32px;
                border-left: 1px dotted #cbcbcb;
                border-top: 1px solid #cbcbcb;
                input{
                    height: 26px;
                    width: 46px;
                    margin-right: 6px;
                    padding: 0;
                    padding-left: 12px;

                }
            }
            td:last-child{
                border-right: 1px solid #cbcbcb;
            }
        }
    }
    .account-pager{
        margin-top: 6px;
        text-align: center;
        li{
            display: inline-block;
            padding: 3px 0;
            width: 28px;
            margin-right: 6px;
            border: 1px solid #ccc;
            cursor: pointer;
        }

        li:hover{
            border: 1px solid #aaa;
        }
        li.selected{
           color: #999;
           background: #f5f5f5;
           cursor: default;
        }
        li.selected:hover{
            border: 1px solid #ccc;
        
        }
    }
}

