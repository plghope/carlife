@border-color: #247ACF;
@blue: rgb(74,110,186);
#acl-form{

    width: 100%;
    -moz-user-select: none;
    -webkit-user-select: none;
    -ms-user-select: none;
    h2{
        padding: 20px 0;
        color: #666;
        font-size: 13px;
        text-indent: -2em;
        font-weight: bold;
    }
    .control-group {
      margin-bottom: 20px;
      *zoom: 1;
    }

    .control-group:before,
    .control-group:after {
      display: table;
      line-height: 0;
      content: "";
    }

    .control-group:after {
      clear: both;
    }

    .control-label {
      float: left;
      width: 110px;
      padding-top: 7px;
      text-align: right;
    }

    .controls {
      position: relative;
      *display: inline-block;
      *padding-left: 20px;
      margin-left: 4px;
      *margin-left: 0;
    }
    
    label{
        font-size: 12px;
        color: #666;
    }

    .form-input{
        display: inline-block;
        height: 24px;
        width: 405px;
        padding: 4px 20px;
        font-size: 14px;
        line-height: 32px;
        vertical-align: middle;
        -webkit-border-radius: 2px;
        -moz-border-radius: 2px;
        border-radius: 2px;
        color: #333;
        border: 1px solid #ddd;
    }


    .info-block{
        position: relative;
        height: 120px;
        border-left: 1px solid #ddd;
    }


    #acl-block{
        border: none;
    }
    .block-header{
        position: absolute;
        top: -30px;
        left: -15px;
        span{
            display: inline-block;
            height: 30px;
            line-height: 30px;
            width: 30px;
            text-align: center;
            border: 1px solid #ddd;
            border-radius: 50% 50%;
            font-size: 14px;
            color: #333;
            background: #fff;

        }
        p{
            margin-left: 13px;
            display: inline-block;
            font-size: 14px;
            color: #333;
        }
    }

    .block-body{
        padding: 30px 0;
    }

    .help-block{
        display: inline-block;
        margin-left: 20px;
        font-size: 14px;
    }

    .error{
        color: #FF0717;
    }

}

#priviledge-table{
    padding-right: 30px;
    h2{
        padding: 20px 0;
        color: #666;
        font-size: 13px;
        text-indent: -2em;
        font-weight: bold;
    }
}

#create-acl{
    display: inline-block;
    width: 82px;
    height: 33px;
    margin-left: 15px;
    line-height: 33px;
    text-align: center;
    font-size: 12px;
    cursor: pointer;
    border: none;
    border-radius: 2px;
    -webkit-border-radius: 2px;
    -o-border-radius: 2px;
    -moz-border-radius: 2px;
    background-color: @blue;
    color: #fff;
}

#create-acl:hover{
    text-decoration: none;
    background: darken(@blue, 5%);
    color: darken(#fff, 5%);
}
