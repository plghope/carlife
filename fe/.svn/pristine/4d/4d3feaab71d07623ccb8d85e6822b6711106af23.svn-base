@blue: rgb(74,110,186);
#data-select-filter{
    position: relative;
    z-index: 2;
    height: 68px;
    box-shadow: 0px 1px 1px rgba(6,0,1,.15);
    .block-select{
        margin-left: 11px;
        padding-top: 12px;
    }
    .period-filter{
        list-style: none;
        padding-top: 21px;
        padding-left: 30px;
        float: left;
        li{
            float: left;
            width: 70px;
            height: 28px;
            margin-right: 8px;
            line-height: 28px;
            text-align: center;
            color: rgb(160,160,160);
            font-size: 12px;
            cursor: pointer;
            border-radius: 2px;
            -webkit-border-radius: 2px;
            -o-border-radius: 2px;
            -moz-border-radius: 2px;
            background-color: rgb(246,246,246);
        }

        li.period-selected{
            background-color: @blue;
            color: #fff;
        }
    }
    .keyword-filter{
        position: relative;
        display: inline-block;
        margin-top: 20px;
        margin-left: 32px;
        input{
            padding: 7px 0px 7px 45px;
            width: 155px;
            border: 1px solid rgb(238, 238, 238);
            transition: width 0.8s;
            color: rgb(125,125,125);
        }

        input:focus{
            width: 305px;
            outline: 1px solid darken(rgb(238, 238, 238),5%);
        }
        
        .fa.fa-search{
            color: rgb(238,238,238);
            position: absolute;
            font-size: 16px;
            top: 6px;
            left: 10px;
        }
    }
}

#link-pager-box{
    margin-top: 10px;
    margin-bottom: 50px;
    height: 60px;
    background-color: #fff;
    box-shadow: 0px 1px 1px rgba(6,0,1,.15);
    .lpc{
        position: relative;
        padding: 20px 20px 0 20px;
    }
    label{
        color: rgb(149,149,149);
    }

    .page-size{
        display: none;
    }

    .select-box{
        position: relative;
        display: none;
        width: 50px;
        height: 18px;
        border: 1px solid #eee;
        line-height: 18px;
        font-size: 15px;
        z-index: 2;
        cursor: pointer;
        vertical-align: middle;
        .current-select{
            margin-left: 7px;
            color: rgb(149,149,149);
        }
        i{
            position: absolute;
            right: 7px;
            top: 50%;
            color: rgb(149,149,149);
            margin-top: -6px;
            font-size: 12px;
        }
        ul{
            display: none;
            position: absolute;
            top: 18px;
            left: -1px;
            background: #fff;
            border: 1px solid #eee;
            border-top: none;
            li{
                width: 43px;
                height: 18px;
                padding-left: 7px;
                color: rgb(149,149,149);
                vertical-align: middle;
                cursor: pointer;
            }

            li.select-disabled{
                color: #999;
            }

        }
    }

    .select-box:hover ul{
        display: block;
    }
    .page-action{
        float: right;
        ul{
            list-style: none;
            display: inline-block;
            li{
                float: left;
                width: 26px;
                height: 20px;
                line-height: 20px;
                text-align: center;
                border: 1px solid #ddd;
                margin-right: 10px;
                color: #666;
            }

            .prev, .next{
                color: #aaa;
                cursor: pointer;
            }

            li.disabled{
                background: #efefef;
                cursor: default;
            }

        }

        div{
            float: right;
            color: rgb(149,149,149);
            input{
                width: 32px;
                height: 20px;
                padding: 0;
                border: 1px solid #ddd;
                outline: none;
                text-align: center;
                color: rgb(125,125,125);
            }


            #page-confirm{
                display: inline-block;
                margin-left: 7px;
                width: 35px;
                height: 20px;
                line-height: 20px;
                text-align: center;
                border: 1px solid #eee;
                font-size: 12px;
                background: rgb(246,246,246);
                color: rgb(149,149,149);
            }

            #page-confirm:hover{
                color: #666;
                text-decoration: none;
            }
            
        }
    }

}

#register-data{
    display: inline-block;
    width: 82px;
    height: 33px;
    margin-left: 25px;
    line-height: 33px;
    text-align: center;
    font-size: 12px;
    cursor: pointer;
    border: none;
    border-radius: 2px;
    -webkit-border-radius: 2px;
    -o-border-radius: 2px;
    -moz-border-radius: 2px;
    background-color: @blue;
    color: #fff;
}

#register-data:hover{
    text-decoration: none;
    background: darken(@blue, 5%);
    color: darken(#fff, 5%);
}
